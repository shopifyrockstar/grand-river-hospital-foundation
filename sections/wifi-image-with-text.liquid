            {% if section.settings.text_3 %}
              <div class="image-with-text__text {% if section.settings.enlarge_text_3 %}large-text{% endif %}">{{ section.settings.text_3 }}</div>
            {% endif %}

            {% if section.settings.button_label_3 != blank %}
