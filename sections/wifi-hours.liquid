<div class="relative container large-row section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="image-with-text">
  {% style %}
    .section-{{ section.id }} .image-with-text {
      background-color: {{ section.settings.color_bg }};
      color: {{ section.settings.color_text }};
  	  padding-top:25px;
  	  padding-bottom:25px;
    }

    .section-{{ section.id }} .image-with-text__image-size {
      padding: {{ section.settings.image_size }}px;
    }

    {% if section.settings.image_size == '120' %}
      @media screen and (max-width: 1000px) and (min-width: 768px) {
        .section-{{ section.id }} .image-with-text__image-size {
          padding: {{ section.settings.image_size | divided_by: 2 }}px;
        }
      }
      @media screen and (max-width: 580px) {
        .section-{{ section.id }} .image-with-text__image-size {
          padding: {{ section.settings.image_size | divided_by: 2 }}px;
        }
      }
    {% endif %}
  
    #shopify-section-{{ section.id }}{
  		background: #fafafa;
  	}
  {% endstyle %}
  
  
  
  
  

  <div class="hour_container_1 page-width image-with-text global-border-radius {% if section.settings.image_position == 'right' %} image-with-text--reverse{% endif %} {% if section.settings.image_size == '0' %} image-with-text--full{% endif %}">
    <div class="hours_con_1">
      
      <div class="">
        {% if section.settings.h_sub_title != blank %}<div class="wifi-IT-sub-title">{{section.settings.h_sub_title}}</div>{% endif %}
        <h2 class="image-with-text__title {% if section.settings.h_title %} giant-title{% else %} large-title{% endif %}">{{ section.settings.h_title }}</h2>        
      </div>
      
      <div class="h_container">
            <div class="h_con">
                <div class="h_text_1">
                   {{ section.settings.h_text_1 }}
                </div>
                <div class="h_text_2">
                   {{ section.settings.h_text_2 }}
                </div>
            </div>
            <div class="h_con h_con_2">
                <div class="h_text_3">
                   {{ section.settings.h_text_3 }}
                </div>
                <div class="h_text_4">
                   {{ section.settings.h_text_4 }}
                </div>                    
            </div>
      </div>  
      
    </div>  
    
    <div class="hours_con_2">
      <div class="one-whole small-down--one-whole">
        <div class="image-with-text__image-size {% unless section.settings.image_size == '0' %}image-with-text__mobile-radius{% endunless %}">
          {% if section.settings.image_link != blank %}<a href="{{ section.settings.image_link }}">{% endif %}
          {% if section.settings.image == blank %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {% else %}
            {% render 'wifi-responsive-image', image: section.settings.image, nomax: true %}
          {% endif %}
          {% if section.settings.image_link != blank %}</a>{% endif %}
        </div>
      </div>

      <div class="one-whole small-down--one-whole relative ">
        <div class="h_btn_con {%- if section.settings.text_alignment == 'center' -%}center{%- endif -%}">

          <h4 class="sub_title">{{ section.settings.sub_title }}</h4>
          <div class="image-with-text__title {% if section.settings.enlarge_title %} giant-title{% else %} large-title{% endif %}">{{ section.settings.text }}</div>
          

          {% if section.settings.button_label != blank %}
            {%- assign inherit_colour = false -%}
            {%- if section.settings.url_style == 'link_style' -%}
              {%- assign alpha = section.settings.color_bg | color_extract: 'alpha' -%}
              {%- if alpha > 0 and section.settings.color_bg != settings.color_body_background -%}
                {%- assign inherit_colour = true -%}
              {%- endif -%}
            {%- endif -%}

            <a class="image-with-text__link {% if section.settings.url_style == 'button_1' %}btn btn--small btn--primary{% elsif section.settings.url_style == 'button_2' %}btn btn--small btn--secondary{% else %}standard-link {% if inherit_colour %}standard-link--inherit-color{% endif %}{% endif %}" href="{{ section.settings.button_link }}">
              {{ section.settings.button_label }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>  
  </div>
  
  
  
</div>

{% schema %}
  {
    "name": "Wifi hours",
    "tag": "section",
    "class": "section-image-with-text",
    "settings": [
     {
        "type": "text",
        "id": "h_sub_title",
        "label": "Sub heading",
        "default": "Image with text"
      },
      {
        "type": "text",
        "id": "h_title",
        "label": "Heading",
        "default": "Image with text"
      },

     {
        "type": "richtext",
        "id": "h_text_1",
        "label": "Text 1"
      },	  
      {
        "type": "richtext",
        "id": "h_text_2",
        "label": "Text 2"
      },
      {
        "type": "richtext",
        "id": "h_text_3",
        "label": "Text 3"
      },	  
      {
        "type": "richtext",
        "id": "h_text_4",
        "label": "Text 4"
      },

      {
        "type": "header",
        "content": "=== Image section ==="
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "url",
        "id": "image_link",
        "label": "Link"
      },
      {
        "type": "select",
        "id": "image_size",
        "label": "Size",
        "options": [
          { "value": "120", "label": "Small" },
          { "value": "60", "label": "Medium" },
          { "value": "30", "label": "Large" },
          { "value": "0", "label": "Full" }
        ],
        "default": "0",
        "info": "Images will not be stretched or cropped."
      },
      {
        "type": "radio",
        "id": "image_position",
        "label": "Alignment",
        "options": [
          { "value": "left", "label": "Left" },
          { "value": "right", "label": "Right" }
        ]
      },
      {
        "type": "text",
        "id": "sub_title",
        "label": "Sub heading",
        "default": "Image with text"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Advertise a sale! Or tell your shoppers something about yourself.<\/p>"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button",
        "default": "Optional button"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
      {
        "type": "radio",
        "id": "url_style",
        "label": "Button style",
        "options": [
          { "value": "button_1", "label": "Button - primary" },
          { "value": "button_2", "label": "Button - secondary" },
          { "value": "link_style", "label": "Link"}
        ],
        "default": "button_1"
      },

      {
        "type": "header",
        "content": "=== Other settings ==="
      },
      {
        "type": "checkbox",
        "id": "enlarge_title",
        "label": "Enlarge heading",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "enlarge_text",
        "label": "Enlarge text",
        "default": false
      },
      {
        "type": "radio",
        "id": "text_alignment",
        "label": "Text alignment",
        "options": [
          { "value": "center", "label": "Center" },
          { "value": "left", "label": "Left" }
        ]
      },
      {
        "type": "color",
        "id": "color_bg",
        "label": "Background color",
        "default": "#dae4e6"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text color",
        "default": "#333333"
      }
    ],
    "presets": [
      {
        "name": "Wifi hours"
      }
    ]
  }
{% endschema %}
