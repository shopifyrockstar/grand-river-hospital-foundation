{%- layout none -%}

{%- assign collection = collections['all'] -%}

{%- if collection.products_count == 0 -%}
    {%- assign collection = collections['allproducts'] -%}
{%- endif -%}

{% assign searchTermsNumber = search.terms | plus: 0 %}

{%- if searchTermsNumber > collection.products_count -%}
    {%- assign searchTermsNumber = collection.products_count -%}
{%- endif -%}

{%- paginate  collection.products by searchTermsNumber -%}

	{%- assign currentPage = paginate.current_page -%}

	{%- capture results -%}
		{%- comment %}<locksmith:d05e>{% endcomment -%}
		  {%- assign locksmith_3a08_forloop__size = 0 %}{%- for item in collection.products -%}{% capture var %}{% render 'locksmith-variables', scope: 'subject', subject: item, subject_parent: collection, variable: 'transparent' %}{% endcapture %}{% if var == 'true' %}{% assign locksmith_3a08_forloop__size = locksmith_3a08_forloop__size | plus: 1 %}{% endif %}{% endfor %}{% assign locksmith_3a08_forloop__index = nil -%}
		{%- comment %}</locksmith:d05e>{% endcomment -%}
		{%- for item in collection.products -%}
			{%- comment %}<locksmith:624a>{% endcomment -%}
			  {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: item, subject_parent: collection, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% if locksmith_3a08_forloop__index == nil %}{% assign locksmith_3a08_forloop__index = 1 %}{% assign locksmith_3a08_forloop__index0 = 0 %}{% else %}{% assign locksmith_3a08_forloop__index = locksmith_3a08_forloop__index | plus: 1 %}{% assign locksmith_3a08_forloop__index0 = locksmith_3a08_forloop__index0 | plus: 1 %}{% endif %}{% if locksmith_3a08_forloop__index == 1 %}{% assign locksmith_3a08_forloop__first = true %}{% else %}{% assign locksmith_3a08_forloop__first = false %}{% endif %}{% if locksmith_3a08_forloop__index == locksmith_3a08_forloop__size %}{% assign locksmith_3a08_forloop__last = true %}{% else %}{% assign locksmith_3a08_forloop__last = false %}{% endif %}{% assign locksmith_3a08_forloop__rindex = locksmith_3a08_forloop__size | minus: locksmith_3a08_forloop__index | minus: 1 %}{% assign locksmith_3a08_forloop__rindex0 = locksmith_3a08_forloop__size | minus: locksmith_3a08_forloop__index0 | minus: 1 %}{% else %}{% continue %}{% endif -%}
			{%- comment %}</locksmith:624a>{% endcomment -%}
			{%- assign product			= item -%}
			{%- assign meta_title		= product.metafields.global.title_tag -%}
			{%- assign meta_description = product.metafields.global.description_tag -%}
			{%- assign seoDone			= product.metafields.SEOMetaManager.seoDone -%}

			{%- if meta_title == null -%}
				{%- assign meta_title = product.title -%}
			{%- endif -%}

			{%- if meta_description == null -%}
				{%- capture meta_description -%}{{ product.description | strip_html | strip_newlines | truncate: 160 }} {% endcapture %}
			{%- endif -%}

			{%- if seoDone == null -%}
				{%- assign seoDone = 0 -%}
			{%- endif -%}

			{
				"productID"			: {{ product.id | JSON }},
				"title"				: {{ product.title | json }},
				"meta_title"		: {{ meta_title | json }},
				"meta_description"	: {{ meta_description | json }},
				"seo_done"			: {{ seoDone }},
				"thumbnail"			: {{ product.featured_image.src | img_url : '100x100' | json }},
				"handle"			: {{ product.handle | json }}
			}
			{%- unless locksmith_3a08_forloop__last -%},{%- endunless -%}
		{% endfor %}
	{%- endcapture -%}
{%- endpaginate -%}
{
	"info": {
		"productCount": {{ collection.products_count }},
		"domain": {{ shop.domain | json }},
		"currentPage": {{ currentPage }},
		"pageSize": {{ searchTermsNumber }}
	},	
	"productData"	: [{{ results }}]
}